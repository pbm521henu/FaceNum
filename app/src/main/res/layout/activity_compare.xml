<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    >



    <ImageView
        android:id="@+id/img1"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/detect"
        android:baselineAlignBottom="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/detect"

        android:layout_alignTop="@+id/img1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/pec"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#cccccc"
        android:text="请点击右侧图片进行活体检测及人脸对比"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/img1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/img1"
        android:layout_alignRight="@+id/img1"
        android:layout_alignEnd="@+id/img1"
        android:text="身份证照片"
        android:textSize="20sp"
        android:gravity="center"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/img2"
        android:layout_alignRight="@+id/img2"
        android:layout_alignEnd="@+id/img2"
        android:text="活体照片"
        android:textSize="20sp"
        android:gravity="center"

        android:layout_alignLeft="@+id/img2"
        android:layout_alignStart="@+id/img2" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pec"
        android:enabled="false"
        android:onClick="btnOk"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_ok_selector"
        android:text="确定"/>
</RelativeLayout>
