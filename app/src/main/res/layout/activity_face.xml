<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.camera3.MainActivity">




    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="65%"

        android:layout_alignParentTop="true"
        />

<!--    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_alignParentBottom="true"

       />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="65%"
        android:background="@drawable/live1"
        android:alpha="0.5"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35%"
        android:layout_below="@+id/preview"
        android:background="#013a89"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/text10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请正视屏幕"
            android:textSize="20sp"
            android:textColor="#999999"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img10"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        <utils.RoundProgressBar
            android:id="@+id/roundProgressBar3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android_custom:roundColor="#C6E2FF"
            android_custom:roundProgressColor="#ffc54f"
            android_custom:roundWidth="10dip"
            android_custom:textIsDisplayable="false" />
    </RelativeLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>