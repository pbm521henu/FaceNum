<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_idcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/edtColor"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="exocr.app.ui.IDCardActivity">

    <View
        android:background="@color/default_gray"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:id="@+id/font_ib_id"
                    android:onClick="openDetecte"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/id01"/>
                <TextView
                    android:textSize="@dimen/tip_tv_size"
                    android:textColor="@color/tipColor"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="点击图片正面识别"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingLeft="@dimen/layout_margin"
                    android:paddingRight="@dimen/layout_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="@dimen/item_margin"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:padding="8dp"
                            android:background="@drawable/shape_gray_square_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:ems="2"
                                android:textSize="@dimen/tvsize"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:text="姓名"
                                android:textColor="@color/tvtColor"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#dcdcdc"
                                android:layout_width="1dp"
                                android:layout_height="20sp"/>
                            <EditText
                                android:textColor="@color/edtColor"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/name_edt_id"
                                android:background="@null"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/item_margin"
                            android:padding="8dp"
                            android:background="@drawable/shape_gray_square_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:ems="2"
                                android:textSize="@dimen/tvsize"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:text="性别"
                                android:textColor="@color/tvtColor"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#dcdcdc"
                                android:layout_width="1dp"
                                android:layout_height="20sp"/>
                            <EditText
                                android:textColor="@color/edtColor"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/sex_edt_id"
                                android:background="@null"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/item_margin"
                            android:padding="8dp"
                            android:background="@drawable/shape_gray_square_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:ems="2"
                                android:textSize="@dimen/tvsize"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:text="民族"
                                android:textColor="@color/tvtColor"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#dcdcdc"
                                android:layout_width="1dp"
                                android:layout_height="20sp"/>
                            <EditText
                                android:textColor="@color/edtColor"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/nation_edt_id"
                                android:background="@null"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:background="@drawable/shape_gray_square_bg"
                        android:id="@+id/head_img_id"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:padding="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/item_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:padding="8dp"
                    android:background="@drawable/shape_gray_square_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:ems="2"
                        android:textSize="@dimen/tvsize"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:text="出生"
                        android:textColor="@color/tvtColor"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dcdcdc"
                        android:layout_width="1dp"
                        android:layout_height="20sp"/>
                    <EditText
                        android:textColor="@color/edtColor"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/birth_edt_id"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/item_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:padding="8dp"
                    android:background="@drawable/shape_gray_square_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:ems="2"
                        android:textSize="@dimen/tvsize"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:text="住址"
                        android:textColor="@color/tvtColor"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dcdcdc"
                        android:layout_width="1dp"
                        android:layout_height="20sp"/>
                    <EditText
                        android:textColor="@color/edtColor"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/address_edt_id"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/item_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:padding="8dp"
                    android:background="@drawable/shape_gray_square_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:ems="2"
                        android:textSize="@dimen/tvsize"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:text="号码"
                        android:textColor="@color/tvtColor"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dcdcdc"
                        android:layout_width="1dp"
                        android:layout_height="20sp"/>
                    <EditText
                        android:textColor="@color/edtColor"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/num_edt_id"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_marginTop="@dimen/item_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/item_margin"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="63%w"
                    android:id="@+id/font_img_id"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/shape_gray_square_bg"
                    />
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/item_margin"
                    android:id="@+id/iscomplete_front_tv_id"
                    android:textSize="@dimen/tvsize"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="5dp"
                    android:background="@color/default_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/default_gray"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <Button
                    android:id="@+id/btn_ok_id_id"
                    android:enabled="false"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_ok_selector"
                    android:text="下一步"
                    android:gravity="center"
                    android:onClick="back"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
